{
    "template": "pingbeat-*",
    "mappings": {
        "_default_": {
            "_all": {
                "norms": {
                    "enabled": false
                }
            },
            "_meta": {
                "version": "1.0-beta1"
            },
            "properties": {
                "beat": {
                    "properties": {
                        "hostname": {
                            "ignore_above": 1024,
                            "type": "keyword"
                        },
                        "name": {
                            "ignore_above": 1024,
                            "type": "keyword"
                        },
                        "version": {
                            "ignore_above": 1024,
                            "type": "keyword"
                        }
                    }
                },
                "@timestamp": {
                    "type": "date"
                },
                "loss": {
                    "type": "boolean"
                },
                "rtt": {
                    "type": "double"
                },
                "target_name": {
                    "type": "text",
                    "fields": {
                        "raw": {
                            "type": "keyword"
                        }
                    }
                },
                "target_addr": {
                    "type": "keyword"
                },
                "tag": {
                    "ignore_above": 256,
                    "type": "keyword"
                }
            }
        }
    }
}
